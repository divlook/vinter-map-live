{
  "name": "vinter-map-live",
  "private": true,
  "version": "1.5.1",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:content && npm run build:background",
    "build:background": "tsc -b && BUILD_MODE=prod vite build --mode production -c vite.config.background.ts",
    "build:content": "tsc -b && BUILD_MODE=prod vite build --mode production -c vite.config.content.ts",
    "build:debug": "npm run build:debug:content && npm run build:debug:background",
    "build:debug:background": "tsc -b && BUILD_MODE=debug vite build -c vite.config.background.ts",
    "build:debug:content": "tsc -b && BUILD_MODE=debug vite build -c vite.config.content.ts",
    "dev": "vite",
    "lint": "eslint .",
    "package": "rm -f dist.zip && zip -qr dist.zip dist",
    "package:debug": "rm -f dist-debug.zip && zip -qr dist-debug.zip dist-debug",
    "postbuild": "npm run sync:manifest-version && npm run package",
    "postbuild:debug": "npm run sync:manifest-version:debug && npm run package:debug",
    "sync:manifest-version": "node ./scripts/sync-manifest-version.js",
    "sync:manifest-version:debug": "node ./scripts/sync-manifest-version.js dist-debug"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@actions/github-script": "github:actions/github-script",
    "@eslint/js": "^9.33.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^20.19.14",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "chrome-types": "^0.1.375",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "git-cliff": "^2.10.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
