{
  "name": "vinter-map-live",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build:background": "tsc -b && vite build -c vite.config.background.ts",
    "build:content": "tsc -b && vite build -c vite.config.content.ts",
    "build": "npm run build:content && npm run build:background",
    "lint": "eslint .",
    "package:dist": "rm -f dist.zip && zip -qr dist.zip dist",
    "postbuild": "npm run sync:manifest-version && npm run package:dist",
    "sync:manifest-version": "node ./scripts/sync-manifest-version.js"
  },
  "dependencies": {
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@actions/github-script": "github:actions/github-script",
    "@eslint/js": "^9.33.0",
    "@types/node": "^20.19.14",
    "chrome-types": "^0.1.375",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "git-cliff": "^2.10.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
